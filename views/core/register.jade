extends templates/layout
block head
  meta(property='og:title' content='Start Essential')
  meta(property='og:type' content='website')
  meta(property='og:url' content='http://startessential.com')
  meta(property='og:description' content='We design incredible infographics and social media posts so you can use them to grow your business.')
  meta(property='og:image' content='http://startessential.com/images/logo-color.png')
block body
  #register
    include templates/_header-naked
    main.main
      .details
        .copy
          h3 Start your 7-day free trial
          p A <span>simple</span> way to create customized essential oil graphics. No credit card required.

      .register
        .register-form.full
          form(action='/register/pre' method='POST')
            input(type='hidden' name='crumb' value=crumb)
            .form-block
              label Member number
              input(type='text' value=(memberNumber || undefined) name='memberNumber' maxlength='7' placeholder='Enter your Young Living Member ID here')
            .form-block.terms
              label Agreement
              input(type='checkbox' value='agree' name='termsAgree')
              p.small I agree to the <a href='/privacy-policy' target='_blank'>Privacy Policy</a> and <a href='/terms-of-service' target='_blank'>Terms of Agreement</a>
            .form-block
              button.fb-login(type='submit') Register with Facebook
              p.fb-login-desc-toggle Why facebook?
              p.fb-login-desc Registering with Facebook is simply a way to quickly login and access Start Essential. We promise to <i>never</i> post or access your private information without your approval.
            .form-block.coupon
              p.show-coupon Have a coupon? Enter it here.
              .form-block-hidden
                input(type='text' name='coupon' placeholder='Enter your coupon here')
