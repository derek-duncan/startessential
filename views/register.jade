extends templates/layout
block head
  meta(property='og:title' content='Start Essential')
  meta(property='og:type' content='website')
  meta(property='og:url' content='http://startessential.com')
  meta(property='og:description' content='We design incredible infographics and social media posts so you can use them to grow your business.')
  meta(property='og:image' content='http://startessential.com/images/logo-color.png')
block body
  #register
    include templates/_header-naked
    main.main
      .details
        .number
          .number-inner
            p.number-label Member Number
            p.number-data
        .copy
          h3 Wonderful!
          p We already have everything we need to customize your Start Essential images. In order to post these images, please connect your Facebook account. This will allow you to login, save your information, and post the daily images to your Facebook wall. We will never post without your consent.

      .register
        a.fb-login(href='/facebook/register') Register with Facebook
