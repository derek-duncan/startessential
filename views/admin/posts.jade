extends ../templates/admin.jade

block head
  script(type="text/javascript" src='/build/moment.min.js')

block body
  h2 All Posts
  .all-posts
    each post in posts
      .post-item
        a(href="/admin/posts/#{post._id}")
          h3 #{post.title}
          p #{post.saves} #{post.saves === 0 || post.saves > 1 ? 'saves' : 'save'}
