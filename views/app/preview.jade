extends ../templates/layout.jade
block head
  meta(property='og:title' content='#{graphic._post.title}')
  meta(property='og:site_name' content='Start Essential')
  meta(property='og:url' content='http://startessential.com/preview/#{graphic.short_code}')
  meta(property='og:description' content='#{graphic._post.content}')
  meta(property='og:image' content='#{graphic.custom_image.url}')
block body
  #fb-root
    script.
      (function(d, s, id){
         var js, fjs = d.getElementsByTagName(s)[0];
         if (d.getElementById(id)) {return;}
         js = d.createElement(s); js.id = id;
         js.src = "//connect.facebook.net/en_US/sdk.js";
         fjs.parentNode.insertBefore(js, fjs);
       }(document, 'script', 'facebook-jssdk'));

      window.fbAsyncInit = function() {
        FB.init({
          appId: '1589098114709228',
          xfbml: true,
          version: 'v2.3'
        });
      };

  div#preview.naked
    include ../templates/_header-naked.jade
    main.main
      section.tools
        .tools-inner
          a(href='/posts') < Back to all graphics
      .main-content
        .graphic
          .graphic-inner.cf
            .graphic-image-wrap
              img.graphic-image(src=graphic.custom_image.normal.Url)
            .graphic-details
              h1.details-title= graphic._post.title
              p.details-content= graphic._post.content
              if sid
                if sid._id == graphic._user._id
                  .share-facebook.details-link(data-code=graphic.short_code) Share on Facebook
                  a.details-download(href=graphic.custom_image.original.Url target='_blank') Download
        .tour
          .tour-inner
            h2.tour-label Start using Essential Oils
            a.signup-link(href=graphic._user.distributor_link) Signup now
block scripts
  script(src='/js/build/jquery.sticky-kit.min.js')
