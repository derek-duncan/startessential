extends ../templates/layout.jade
block body
  script.
    if (!{user_exists}) {
      User = {
        token: "#{user.token}",
        id: "#{user.facebook_id}"
      }
    }
    Post = {
      content: '#{post.content}',
      image_url: '#{post.image.normal.Location}',
    }
  div#post
    include ../templates/_header
    main.main
      section.tools
        .tools-inner
          a(href='/posts') < Back to all graphics
      section.intro
        .intro-content
          h3.title #{post.day}'s Essential Oils Graphic
          //-p.details 
      section.post-wrap
        .post
          .post-header
            h4.daily-title #{post.title}
            if user
              form.post-now(action='/posts/#{post._id}/save' method='POST')
                button(type='submit') Post Now
          article.post-content
            .post-copy
              .description #{post.content}
              img.image(src='#{post.image.normal.Location}')
      section.final
        .final-content
          h3.title Customize and Post
          .tagline
            if user.member_number
              | Your member number is listed below. Feel free to update this in the settings if this has changed.
            else
              | Enter your member number so we can create your distributor link
          form(method='POST' action='/publish/#{post._id}')
            input.member-number(name='memberNumber' type='text' placeholder='(Optional) Young Living member number' disabled=(user.member_number ? 'disabled' : undefined) value='#{user.member_number ? user.member_number : ""}')
            .cta
              button.post-now(type='submit')
                if user_exists
                  | Post to Facebook
                else 
                  | Sign up to post
