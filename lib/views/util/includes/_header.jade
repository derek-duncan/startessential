header.header
  .saving-overlay
    .saving-overlay-text
      if message
        | #{message}
      else
        | Saving...
  .header-content
    .logo-wrap
      a(href='/posts' title='Start Essential Logo')
        img#stop-1.logo(src='/images/logo-color.png' width='150')
    nav.nav
      if sid
        div.record-counter
          span.tooltip This will reset every week
          span#stop-2.counter #{sid.records.downloaded}/#{sid.records.downloads} Saved
      ul.nav-list
        li.nav-item#posts-link
          a(class=(active === 'explore' ? 'active' : undefined) href='/posts') Explore
        li.nav-item#saved-link
          a(class=(active === 'saved' ? 'active' : undefined) href='/saved') Saved
        if sid && sid.site
          li.nav-item#site-link
            a(class=(active === 'site' ? 'active' : undefined) href='/site') Site
        li.nav-item#account-link
          a(class=(active === 'account' ? 'active' : undefined) href='/account') Account
        if sid && !sid.site
          li.nav-item 
            a(href='/logout') Logout

